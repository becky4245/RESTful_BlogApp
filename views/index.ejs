<%- include ("partials/header") %>
<div class="ui main text container">
    <div class="ui huge header">YOUR POSTS</div>
    <div class="ui top attached segment">
        <div class="ui divided items">
            <% blogs.forEach(function(blog){ %>
            <div class="item">
                <div class="image">
                    <img src="<%= blog.image %>">
                </div>
                <div class="content">
                    <a class="header" href="/blogs/<%= blog._id %>"><%= blog.title %></a>
                    <div class="meta">
                        <span><%= blog.created.toDateString() %></span>
                    </div>
                    <div class="description">
                        <p><%- blog.body.substring(0,100) %>....</p>
                    </div>
                    <div> <h5>Thanks <%= blog.special_thanks %></h5></div>
                    <div class="extra">
                        <a class="small ui floated basic blue button" href="/blogs/<%= blog._id %>">
                            Click to Read More
                            <!-- <i class="right chevron icon" ></i> -->
                        </a>
                    </div>

                </div>


               
                <!--<%- blog.body %> it evaluates a code means if u put strong tag in body it wrorks and can do html in that  -->
            </div>

            <% }); %>
        </div>

    </div>
</div>


<%- include ("./partials/footer") %>